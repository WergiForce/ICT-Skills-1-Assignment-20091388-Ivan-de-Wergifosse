{{> menu}}

<form class="ui stacked segment form" action="/member/{{member.id}}/updatemember" method="POST">
    <div class="two fields">
        <div class="field">
            <label>First Name</label>
            <input placeholder="First Name" type="text"  name="firstName" value="{{member.firstName}}">
        </div>
        <div class="field">
            <label>Last Name</label>
            <input placeholder="Last Name" type="text"  name="lastName" value="{{member.lastName}}">
        </div>
    </div>
    <div class="field">
        <label>Email</label>
        <input placeholder="Email" type="text" name="email" value="{{member.email}}">
    </div>
    <div class="field">
        <label>Password</label>
        <input type="password" name="password" value="{{member.password}}">
    </div>
    <div class="field">
        <label>Gender</label>
        <input placeholder="Gender" type="text" name="gender" value="{{member.gender}}">
    </div>
    <div class="field">
        <label>Height</label>
        <input placeholder="0.0" type="number" name="height" value="{{member.height}}">
    </div>
    <div class="field">
        <label>Starting Weight</label>
        <input placeholder="0.0" type="number" name="startingWeight" value="{{member.startingWeight}}">
    </div>

    <button class="ui blue submit button">Update Details</button>
</form>
