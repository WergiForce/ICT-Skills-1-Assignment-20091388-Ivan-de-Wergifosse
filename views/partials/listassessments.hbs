<table class="ui table">
    <thead>
    <tr>
        <th>Time Stamp</th>
        <th>Weight</th>
        <th>Chest</th>
        <th>Thigh</th>
        <th>Upper Arm</th>
        <th>Waist</th>
        <th>Hips</th>
        <th>Comment</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        {{#each member.assessments}}
            <tr>
                <td>
                    {{timestamp}}
                </td>
                <td>
                    {{weight}}
                </td>
                <td>
                    {{chest}}
                </td>
                <td>
                    {{thigh}}
                </td>
                <td>
                    {{upperarm}}
                </td>
                <td>
                    {{waist}}
                </td>
                <td>
                    {{hips}}
                </td>
                <td>
                    {{comment}}
                </td>
                <td>
                    <a href="/memberdashboard/deleteassessment/{{id}}" class="ui icon button">
                        <i class="icon trash"></i>
                    </a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

